{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript",
  ],
  "overrides": [
    // {
    //   "files": [
    //     "**/*.{ts,js,json,vue}"
    //   ]
    // }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": false,
  },
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "space-before-function-paren": ["error", "never"],
    "keyword-spacing": [
      "error",
      {
        "overrides": {
          "if": {
            "after": false
          },
          "for": {
            "after": false
          },
          "while": {
            "after": false
          },
          "static": {
            "after": false
          },
          "as": {
            "after": false
          }
        }
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-return-assign": "off",
    "indent": [
      "error",
      2
    ],
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": "error",
    "no-trailing-spaces": "error",
    "no-var": "error",
    "prefer-const": "error",
    // "vue/multi-word-component-names": "off",
    // "vue/html-quotes": [
    //   "error",
    //   "double"
    // ]
  },
  "settings": {
    "json/ignore-files": [
      "**/package-lock.json"
    ],
    "json/json-with-comments-files": [
      "**/tsconfig.json",
      ".vscode/**"
    ]
  },
  "globals": {
    "$nuxt": true
  }
}
